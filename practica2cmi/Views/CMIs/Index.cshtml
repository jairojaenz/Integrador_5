@model IEnumerable<Practica2cmi.Models.CMI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-expand-lg">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="tim-icons icon-align-left-2"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                   @Html.ActionLink("Perspectiva", "Index", "Perspectivas", new { area = "" }, new{ @class = "nav-link" }) 
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Objetivo", "Index", "Objetivoes", new { area = "" }, new{ @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                   @Html.ActionLink("indicador", "Index", "Indicadors", new { area = "" }, new{ @class = "nav-link"})
                </li>
                <li class="nav-item">
                   @Html.ActionLink("Meta", "Index", "Metas", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </div>
</nav>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
